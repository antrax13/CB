{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="row align-items-start">
        <div class="col-md-6">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel"
                 style="position: relative;">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
                </ol>
                <div class="carousel-inner" style="border: 1px solid #e5e5e5; position: relative;">
                    <div class="carousel-item active">
                        <img src="{{ asset('images/products/a.jpg') }}" class="d-block w-100" alt="..."
                             style="">
                        <div class="carousel-item-wrapper d-none d-sm-block text-center">
                            <h2>Slide label</h2>
                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                            <a href="{{ path('gallery') }}" class="btn btn-lg btn-success btn-lg">Visit Gallery</a>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="{{ asset('images/products/b.jpg') }}" class="d-block w-100" alt="..."
                             style="">
                        <div class="carousel-item-wrapper d-none d-sm-block text-center">
                            <h2>Slide label</h2>
                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                            <a href="{{ path('gallery') }}" class="btn btn-lg btn-success btn-lg">Visit Gallery</a>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="{{ asset('images/products/c.jpg') }}" class="d-block w-100" alt="..."
                             style="">
                        <div class="carousel-item-wrapper d-none d-sm-block text-center">
                            <h2>Slide label</h2>
                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                            <a href="{{ path('gallery') }}" class="btn btn-lg btn-success btn-lg">Visit Gallery</a>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="{{ asset('images/products/d.jpg') }}" class="d-block w-100" alt="..."
                             style="">
                        <div class="carousel-item-wrapper d-none d-sm-block text-center">
                            <h2>Slide label</h2>
                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                            <a href="{{ path('gallery') }}" class="btn btn-lg btn-success btn-lg">Visit Gallery</a>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="images/custom-products/{{ randomCustomPhoto.image }}" class="d-block w-100" alt="{{ randomCustomPhoto.type }}"
                             style="">
                        <div class="carousel-item-wrapper d-none d-sm-block text-center">
                            <h2>{{ randomCustomPhoto.type }}</h2>
                            <p>Check other custom items we are making.</p>
                            <a href="{{ path('our_products_show', {'slug': randomCustomPhoto.slug}) }}" class="btn btn-lg btn-success">Visit Custom Work</a>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="images/gallery/{{ randomGallery.file }}" class="d-block w-100" alt="{{ randomGallery.title }}"
                             style="">
                        <div class="carousel-item-wrapper d-none d-sm-block text-center">
                            <h2>{{ randomGallery.title }}</h2>
                            <p>More pictures of our work can be found in our gallery section.</p>
                            <a href="{{ path('gallery') }}" class="btn btn-lg btn-success">Visit Gallery</a>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                {% for custom in customs %}
                    <div class="col-md-6">
                        <div class="card" style="margin-bottom: 20px; height: 100%; border-radius: 0px; border-top: 1px solid #e5e5e5;">
                            <div class="our-product-wrapper">
                                <a href="{{ path('our_products_show', {'slug': custom.slug}) }}" title="{{ custom.type }}"
                                   class="our-product">
                                    <img src="images/custom-products/{{ custom.image }}" class="card-img-top"
                                         alt="{{ custom.type }}">
                                </a>
                            </div>
                            <div class="card-body" style="display: block;">
                                <h5 class="card-title">{{ custom.type }}</h5>
                                <p class="card-text">{{ custom.intro }}</p>
                                <a href="{{ path('our_products_show', {'slug': custom.slug}) }}"
                                   class="btn btn-primary btn-md" style="position: absolute; bottom: 20px; right: 20px;">Read More</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    <hr style="margin: 20px 0;"/>
    <h3 class="display-4 text-center">Featured Products</h3>
    <p class="lead text-center">Discover more our items in <a href="{{ path('shop') }}" title="CocktailBrandalism Shop">our
            shop</a>. If you are looking for something specific or custom then don't hesitate & <a
                href="{{ path('contact') }}" title="CocktailBrandalism contacts">contact us</a>.</p>
    <div class="row">
        {% for product in products %}
            <div class="col-md-3 col-sm-6">
                <div class="product-grid">
                    <div class="product-image">
                        <a href="{{ path('shop_show_product_details', {'slug': product.slug}) }}">
                            <img class="pic-1 img-fluid" src="{{ asset('images/products/'~product.image) }}">
                        </a>
                        <span class="product-new-label">Â£{{ product.price }}</span>

                    </div>
                    <div class="product-content">
                        <h3 class="title">{{ product.name }}</h3>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
