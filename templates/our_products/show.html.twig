{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <img class="img-fluid" src="{{ asset('images/custom-products/'~product.image) }}" style="border: 1px solid #DDDDDD;">
                </div>
                <div class="col-md-6">
                    <div class="alert alert-info" style="height: 100%; padding-bottom: 0px;">
                        <h1 class="display-4">{{ product.type }}</h1>
                        <p class="lead">
                            {{ product.intro }}
                        </p>
                        <p style="margin-bottom: 0px;">
                            {{ product.details|raw|nl2br }}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

