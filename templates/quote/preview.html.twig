{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    {% include 'quote/partials/_tabs.html.twig' %}
                </div>
                <div class="card-body">
                    <iframe src="{{ path('generate_pdf', {'id':quote.id}) }}" width="100%" height="940px"></iframe>

                    <small class="text-muted">Internet Explorer wont load PDF please use different browser.</small>

                    <div class="p-3 mt-3 bg-secondary">
                        <h4>Use this as a default message if you want</h4>
                        Email: <b>{{ quote.customer.email }}</b>
                        <hr />
                        {% set firstname = quote.customer.name|split(',') %}

                        Hi {{ firstname[0] }},<br /><br />

                        thank you for your inquiry.<br /><br />

                        Attachment is your quote with requested {{ quote.brandSketchesNotRemoved|length > 1 ? 'items' : 'item' }}.<br /><br />

                        Any questions let us know so we can proceed.<br /><br />

                        Have a nice day.<br /><br />

                        Regards<br />
                        Peter from CocktailBrandalism.com
                    </div>
                </div>
                <div class="card-footer">
                    <a href="{{ path('generate_pdf', {'id' : quote.id}) }}" class="btn btn-success"><i class="fas fa-file-export"></i> Download PDF</a>

                    <a href="{{ path('quotes') }}" class="btn btn-secondary float-right">Close</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}