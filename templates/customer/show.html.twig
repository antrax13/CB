{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            {{ form_start(form, {attr: { novalidate: 'novalidate' }}) }}
            <div class="card">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs">
                        <li class="nav-item">
                            <a class="nav-link active" href="#"><i class="fas fa-user"></i> {{ title }}</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('customer_show_request', {'id': customer.id}) }}"><span class="badge badge-info">{{ customer.quotesNotRemoved|length }}</span> Quotes</a>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    {{ form_widget(form) }}
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Update Customer</button>
                    <a href="{{ path('customers') }}" class="btn btn-secondary float-right">Close</a>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}