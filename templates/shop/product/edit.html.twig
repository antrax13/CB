{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            {{ form_start(form, {attr: { novalidate: 'novalidate' }}) }}
            <div class="card">
                <h1 class="card-header">
                    Edit {{ product.name }}
                </h1>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.name) }}
                            {{ form_row(form.image2) }}
                            {{ form_row(form.price) }}
                            {{ form_row(form.category) }}
                            {{ form_row(form.intro) }}
                            {{ form_row(form.isActive) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.description) }}
                        </div>
                    </div>

                    <div class="alert alert-secondary">
                        <h4>Current view</h4>
                        <hr />
                        <div class="row">
                            <div class="col-md-6">
                                <img class="img-fluid" src="{{ asset('images/products/'~product.image) }}">
                            </div>
                            <div class="col-md-6">
                                <div class="alert alert-info">
                                    <h1 class="display-4">{{ product.name }}</h1>
                                    <p class="lead">
                                        {{ product.intro }}
                                    </p>
                                    <p>
                                        {{ product.description|raw }}
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Save</button>
                    <a href="{{ path('admin_product') }}" class="btn btn-secondary float-right">Close</a>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $('.custom-file-input').on('change',function(){
            var fileName = document.getElementById("product_image2").files[0].name;
            $(this).next('.custom-file-label').addClass("selected").html(fileName);
        })
    </script>
{% endblock %}