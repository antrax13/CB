{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <img class="img-fluid mb-4" src="{{ asset('images/products/'~product.image) }}" style="border: 2px solid #DDDDDD;">
                    <div class="row mb-4">
                    {% for image in product.productReferences %}
                        <div class="col-3">
                            <a class="d-block mb-4" data-fancybox="gallery" href="{{ asset('images/product-references/'~image.filename) }}"
                               data-caption="{{ image.originalFilename }}" title="{{ image.originalFilename }}">
                                <img src="{{ asset('images/product-references/'~image.filename)|imagine_filter('thumbnail_gallery') }}" class="img-fluid gallery-img" alt="{{ image.title }}"/>
                            </a>
                        </div>
                    {% endfor %}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="alert alert-info">
                        <h1 class="display-4">{{ product.name }}</h1>
                        <p class="lead">
                            {{ product.intro }}
                        </p>
                        <p>
                        <h1>Price: <span class="text-success">Â£{{ product.price }}</span><small style="font-size: 10px;" class="text-muted"> including VAT</small></h1>
                        </p>
                        <p style="margin-bottom: 40px;">
                            {{ product.description|raw|nl2br }}
                        </p>
                        <br />
                        {#<form action="{{ path('order_add_product_to_cart', {'slug': product.slug}) }}" method="post">#}
                            {#<button class="btn btn-lg btn-success" style="position: absolute; bottom: 20px; margin-top: 20px;"><i#}
                                        {#class="fas fa-shopping-cart"></i> Add to Cart</button>#}
                        {#</form>#}
                        {#<div id="js-add-to-cart" class="btn btn-lg btn-success"#}
                             {#style="position: absolute; bottom: 20px; margin-top: 20px;"><i#}
                                    {#class="fas fa-shopping-cart"></i> Add to Cart#}
                        {#</div>#}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/fancyapps/fancybox@3.5.6/dist/jquery.fancybox.min.css"/>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/gh/fancyapps/fancybox@3.5.6/dist/jquery.fancybox.min.js"></script>

    <script>
        $("#js-add-to-cart").on('click', function (e) {
            e.preventDefault();
            var url = $(this).attr('href');
            swal({
                title: 'Under Development',
                html: 'We are working hard to develop our e-shop.<br />' +
                    'Please contact <b>info@cocktailbrandalism.com</b> to buy this product!<br />' +
                    'Sorry for any inconvenience.',
                type: 'info',
                cancelButtonColor: '#6c757d',
                allowOutsideClick: false,
            });
        });
    </script>
{% endblock %}

