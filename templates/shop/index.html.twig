{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="row no-top-border-card">
        {% for category in categories %}
            <div class="col-md-3">
                <div class="card" style="margin-bottom: 10px;">
                    <div class="card-header">
                        {{ category.name }}
                    </div>
                    <div class="card-body">

                    </div>
                    <div class="card-footer">
                        <a href="{{ path('shop_category', {'category' : category.id}) }}"
                           class="btn btn-primary btn-md btn-block">Read More</a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-md-12">
                <div class="alert alert-info">
                    No categories have been found.
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}